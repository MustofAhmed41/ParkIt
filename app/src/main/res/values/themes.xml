<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ISDMap" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#007c91</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorButtonNormal">@color/white</item>
    </style>


    <!-- style for the shadow of EditText boxes -->
    <style name="EditTextShadowStyle">
        <item name="elevation">1dp</item>
        <item name="android:translationZ">5dp</item>
    </style>


    <style name="DialogAnimationSliding" parent="@android:style/Theme.Dialog">
        <item name="android:windowEnterAnimation">@anim/dialog_slide_up</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimationSliding</item>
        <item name="android:windowExitAnimation">@anim/dialog_bottom_exit</item>
    </style>
    <!-- a sliding animation where the dialog pops up from the top to the bottom and then
    slides further down on dismiss-->
    <style name="DialogBottomAnimationSliding" parent="@android:style/Theme.Dialog">
        <item name="android:windowEnterAnimation">@anim/dialog_bottom_enter</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimationSliding</item>
        <item name="android:windowExitAnimation">@anim/dialog_bottom_exit</item>
    </style>







</resources>