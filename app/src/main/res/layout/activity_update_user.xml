<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterUser">

    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent">


    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:gravity="center_horizontal">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Update Profile"
        android:textColor="#0d6e6a"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:letterSpacing="0.03"/>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_height="80dp"
        android:layout_width="match_parent"
        android:textColor="#0d6e6a"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:startIconDrawable="@drawable/user"
        app:helperTextTextColor="#FF0000"
        android:paddingLeft="30dp"
        app:helperText="Required*"
        android:hint="Name"
        app:endIconMode="clear_text"
        android:id="@+id/textInputLayoutusernam"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

    <com.google.android.material.textfield.TextInputEditText
        android:layout_height="50dp"
        android:layout_width="350dp"
        android:id="@+id/update_user_name"
        android:maxLength="20"
        android:inputType="textAutoComplete">
    </com.google.android.material.textfield.TextInputEditText>

</com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_height="80dp"
        android:layout_width="match_parent"
        android:textColor="#0d6e6a"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="1dp"
        app:startIconDrawable="@drawable/phone"
        app:helperTextTextColor="#FF0000"
        android:paddingLeft="30dp"
        app:helperText="Required*"
        android:hint="Phone"
        app:endIconMode="clear_text"
        android:id="@+id/textInputLayoutuserphone"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

    <com.google.android.material.textfield.TextInputEditText
        android:layout_height="50dp"
        android:layout_width="350dp"
        android:id="@+id/update_user_phone"
        android:maxLength="11"
        android:inputType="number">
    </com.google.android.material.textfield.TextInputEditText>

</com.google.android.material.textfield.TextInputLayout>





        <com.google.android.material.textfield.TextInputLayout
        android:layout_height="80dp"
        android:layout_width="match_parent"
        android:textColor="#0d6e6a"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="1dp"
        app:startIconDrawable="@drawable/car"
        app:helperTextTextColor="#FF0000"
        android:paddingLeft="30dp"
        app:helperText="Required*"
        android:hint="Car(model)"
        app:endIconMode="clear_text"
        android:id="@+id/textInputLayoutusercar"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

    <com.google.android.material.textfield.TextInputEditText
        android:layout_height="50dp"
        android:layout_width="350dp"
        android:id="@+id/update_user_car_model"
        android:maxLength="20"
        android:inputType="textAutoComplete">
    </com.google.android.material.textfield.TextInputEditText>

</com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_height="80dp"
        android:layout_width="match_parent"
        android:textColor="#0d6e6a"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="1dp"
        app:startIconDrawable="@drawable/car"
        app:helperTextTextColor="#FF0000"
        android:paddingLeft="30dp"
        app:helperText="Required*"
        android:hint="Car(color)"
        app:endIconMode="clear_text"
        android:id="@+id/textInputLayoutusercarcol"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

    <com.google.android.material.textfield.TextInputEditText
        android:layout_height="50dp"
        android:layout_width="350dp"
        android:id="@+id/update_user_car_color"
        android:maxLength="20"
        android:inputType="text">
    </com.google.android.material.textfield.TextInputEditText>

</com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_height="80dp"
        android:layout_width="match_parent"
        android:textColor="#0d6e6a"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="1dp"
        app:startIconDrawable="@drawable/car"
        app:helperTextTextColor="#FF0000"
        android:paddingLeft="30dp"
        app:helperText="Required*"
        android:hint="Car(number)"
        app:endIconMode="clear_text"
        android:id="@+id/textInputLayoutusercarid"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

    <com.google.android.material.textfield.TextInputEditText
        android:layout_height="50dp"
        android:layout_width="350dp"
        android:id="@+id/update_user_car_number"
        android:maxLength="20"
        android:inputType="textAutoComplete">
    </com.google.android.material.textfield.TextInputEditText>

</com.google.android.material.textfield.TextInputLayout>

    <Button
        android:layout_height="50dp"
        android:layout_width="350dp"
        android:text="Update"
        android:id="@+id/update_user_update_btn"
        android:textColor="#FFF"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"/>


    </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>