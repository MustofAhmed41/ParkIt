<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterOwner">


    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent">


        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Register"
                android:textColor="#0d6e6a"
                android:textSize="35dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:letterSpacing="0.03"/>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_height="80dp"
                android:layout_width="match_parent"
                android:textColor="#0d6e6a"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                app:startIconDrawable="@drawable/user"
                app:helperTextTextColor="#FF0000"
                android:paddingLeft="30dp"
                app:helperText="Required*"
                android:hint="Name"
                app:endIconMode="clear_text"
                android:id="@+id/textInputLayoutownernam"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_height="50dp"
                    android:layout_width="350dp"
                    android:id="@+id/ownerName"
                    android:maxLength="20"
                    android:inputType="textAutoComplete">
                </com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_height="80dp"
                android:layout_width="match_parent"
                android:textColor="#0d6e6a"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginTop="1dp"
                app:startIconDrawable="@drawable/email"
                app:helperTextTextColor="#FF0000"
                android:paddingLeft="30dp"
                app:helperText="Required*"
                android:hint="Email"
                app:endIconMode="clear_text"
                android:id="@+id/textInputLayoutownereml"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_height="50dp"
                    android:layout_width="350dp"
                    android:id="@+id/ownerEmail"
                    android:inputType="textEmailAddress"
                  >
                </com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_height="80dp"
                android:layout_width="match_parent"
                android:textColor="#0d6e6a"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginTop="1dp"
                app:startIconDrawable="@drawable/phone"
                app:helperTextTextColor="#FF0000"
                android:paddingLeft="30dp"
                app:helperText="Required*"
                android:hint="Phone"
                app:endIconMode="clear_text"
                android:id="@+id/textInputLayoutownerphone"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_height="50dp"
                    android:layout_width="350dp"
                    android:id="@+id/ownerPhone"
                    android:maxLength="11"
                    android:inputType="number">
                </com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_height="80dp"
                android:layout_width="match_parent"
                android:textColor="#0d6e6a"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginTop="1dp"
                app:startIconDrawable="@drawable/address"
                app:helperTextTextColor="#FF0000"
                android:paddingLeft="30dp"
                app:helperText="Required*"
                android:hint="Parking Name"
                app:endIconMode="clear_text"
                android:id="@+id/textInputLayoutslotaddress"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_height="50dp"
                    android:layout_width="350dp"
                    android:id="@+id/register_owner_parking_name"
                    android:maxLength="20"
                    android:inputType="textAutoComplete">
                </com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_height="80dp"
                android:layout_width="match_parent"
                android:textColor="#0d6e6a"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginTop="1dp"
                app:startIconDrawable="@drawable/address"
                app:helperTextTextColor="#FF0000"
                android:paddingLeft="30dp"
                app:helperText="Required*"
                android:hint="Address"
                app:endIconMode="clear_text"
                android:id="@+id/textInputLayoutslotName"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_height="50dp"
                    android:layout_width="350dp"
                    android:id="@+id/register_owner_address"
                    android:maxLength="20"
                    android:inputType="textAutoComplete">
                </com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_height="80dp"
                android:layout_width="match_parent"
                android:textColor="#0d6e6a"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginTop="1dp"
                app:startIconDrawable="@drawable/streets"
                app:helperTextTextColor="#FF0000"
                android:paddingLeft="30dp"
                app:helperText="Required*"
                android:hint="Slot(number)"
                app:endIconMode="clear_text"
                android:id="@+id/textInputLayoutslotnum"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_height="50dp"
                    android:layout_width="350dp"
                    android:id="@+id/slotNo"
                    android:maxLength="20"
                    android:inputType="textAutoComplete">
                </com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_height="80dp"
                android:layout_width="match_parent"
                android:textColor="#0d6e6a"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginTop="1dp"
                app:startIconDrawable="@drawable/payment"
                app:helperTextTextColor="#FF0000"
                android:paddingLeft="30dp"
                app:helperText="Required*"
                android:hint="Cost(per hour)"
                app:endIconMode="clear_text"
                android:id="@+id/textInputLayoutslotcost"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_height="50dp"
                    android:layout_width="350dp"
                    android:id="@+id/cost"
                    android:maxLength="20"
                    android:inputType="textAutoComplete">
                </com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>




            <com.google.android.material.textfield.TextInputLayout
                android:layout_height="80dp"
                android:layout_width="match_parent"
                android:textColor="#0d6e6a"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginTop="1dp"
                app:startIconDrawable="@drawable/pass"
                app:helperTextTextColor="#FF0000"
                android:paddingLeft="30dp"
                app:helperText="Required*"
                android:hint="Password"
                app:endIconMode="password_toggle"
                android:id="@+id/textInputLayoutownerpas"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_height="50dp"
                    android:layout_width="350dp"
                    android:inputType="textPassword"
                    android:id="@+id/ownerpas"
                    android:maxLength="20">
                </com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_height="80dp"
                android:layout_width="match_parent"
                android:textColor="#0d6e6a"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginTop="1dp"
                app:startIconDrawable="@drawable/secure"
                app:helperTextTextColor="#FF0000"
                android:paddingLeft="30dp"
                app:helperText="Required*"
                android:hint="Confirm Password"
                app:endIconMode="password_toggle"
                android:id="@+id/textInputLayoutownerconpas"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_height="50dp"
                    android:layout_width="350dp"
                    android:inputType="textPassword"
                    android:id="@+id/ownerconfirmpas"
                    android:maxLength="20">
                </com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:layout_height="50dp"
                android:layout_width="350dp"
                android:text="Register"
                android:textColor="#FFF"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:id="@+id/ownerReg"
                android:background="@drawable/button"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Already have an account? Sign In"
                android:textColor="#0d6e6a"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/gotoownerlogin"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>