<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/shape_background_vividblue"
    >

    <ImageView
        android:id="@+id/lock_icon_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/dialog_ic_lock_s"
        android:layout_marginTop="20dp"
        app:tint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/forgotpassword_text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lock_icon_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Hobbe kichu ekta jani na"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/lock_icon_id"
        app:layout_constraintStart_toStartOf="@+id/lock_icon_id"
        app:layout_constraintTop_toBottomOf="@+id/lock_icon_id" />

    <TextView
        android:id="@+id/forgotpassword_text1_id"
        android:layout_width="0dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.7"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forgotpassword_text_id"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:text="hentenn"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/forgotpassword_text_id"
        app:layout_constraintStart_toStartOf="@+id/forgotpassword_text_id"
        app:layout_constraintTop_toBottomOf="@+id/forgotpassword_text_id" />

    <Button
        android:id="@+id/forgotpassword_button_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HABI JABI"
        android:textColor="@color/black"
        android:background="@drawable/shape_bottom_dialog_button_full"
        android:layout_marginTop="20dp"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forgotpassword_text1_id" />

</androidx.constraintlayout.widget.ConstraintLayout>